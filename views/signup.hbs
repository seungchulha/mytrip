<div class="container">
    <div class="signup_grid" style="width: 500px; margin: auto; padding-top: 50px;">
        <h1 style="text-align: center; margin-bottom: 50px;">Create Account</h1>
        <form method="POST">
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" name="User[email]" id="email" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="User[password]" id="password" placeholder="password">
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="User[name]" placeholder="name">
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" id="age" name="User[age]" placeholder="age">
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
    </div>
    
</div>